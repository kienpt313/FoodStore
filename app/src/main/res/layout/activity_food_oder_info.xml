<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="CustomerFoodPanel.FoodOderInfo">

    <ImageView
        android:id="@+id/detailsorderfood"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/pricedetailsFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="price"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/namedetailsFood"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/namedetailsFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="namefood"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsorderfood" />

    <TextView
        android:id="@+id/descriptionfoodorder"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:text="Description"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressfoodorderinfo" />

    <ImageView
        android:id="@+id/addfoodcount"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionfoodorder"
        app:layout_constraintVertical_bias="0.921"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <TextView
        android:id="@+id/countitemorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="22dp"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addfoodcount" />

    <ImageView
        android:id="@+id/removefoodcount"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/countitemorder"
        app:layout_constraintTop_toBottomOf="@+id/descriptionfoodorder"
        app:layout_constraintVertical_bias="0.921"
        app:srcCompat="@drawable/ic_baseline_remove_24" />

    <Button
        android:id="@+id/addfood_to_card"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Add to Cart"
        app:backgroundTint="#3F51B5"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toEndOf="@+id/removefoodcount"
        app:layout_constraintTop_toBottomOf="@+id/descriptionfoodorder"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/addressfoodorderinfo"
        android:layout_width="227dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namedetailsFood" />


</androidx.constraintlayout.widget.ConstraintLayout>